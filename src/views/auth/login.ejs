<%- include('../layouts/full-size/header.ejs') %>
<div class="login-page">
  <div class="login-page__content">
    <h1 class="form-title">Вход</h1>
    <form class="form" method="post">
      <div class="form__item form__item_direction_col">
        <label>Логин</label>
        <input name="username" class="input _border_main" required />
      </div>

      <div class="form__item form__item_direction_col">
        <label>Пароль</label>
        <input name="password" type="password" class="input _border_main" required />
      </div>

      <button class="button button_theme_positive" type="submit">Войти</button>
    </form>
    <span id="error-message" class="form-error-message"></span>
    <a class="form-link" href="/register.php">Регистрация</a>
  </div>
</div>
